                                             HorizontalAlignment="Left" 
                                             VerticalAlignment="Center"                                                                                           
                                             ToolTip="{Binding Path=ReportCommand.Title}"	
                                             ImageSource="{x:Static uiCommandService:UICommandIconRepository.Report}" 
                                              IsEnabled="True" 
