                                        <Setter TargetName="Button2"  Property="BorderBrush" 
                                                Value="{Binding Path=InfoRemarkColor, UpdateSourceTrigger=PropertyChanged, Mode=OneWay,  Converter={StaticResource locationToBrush}}" >
