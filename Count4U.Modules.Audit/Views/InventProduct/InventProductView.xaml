									              CommandParameter="{Binding .}"  Height="20"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding HasMarkColumn}" Value="True">
                                        <Setter TargetName="Button2"  Property="Background" 
                                                Value="{Binding Path=InfoRemarkColor, UpdateSourceTrigger=PropertyChanged, Mode=OneWay,  Converter={StaticResource locationToBrush}}" >
