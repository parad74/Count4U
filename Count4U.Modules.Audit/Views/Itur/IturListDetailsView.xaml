                            <ItemsControl 
                                VerticalAlignment="Center"
                                Grid.Column="0" 
                                ItemsSource="{Binding Path=ProgressItems}"
                                Margin="0,0,0,0"
                                >
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"   />
