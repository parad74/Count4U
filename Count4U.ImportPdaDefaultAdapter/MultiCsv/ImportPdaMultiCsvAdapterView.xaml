                       VerticalAlignment="Top"/>

        <TextBlock Height="23" HorizontalAlignment="Left" Margin="150,120,10,0" 
                       Text="{Binding Path=CountFiles}"  
                       VerticalAlignment="Top" FontWeight="Bold" Width="66"/>
